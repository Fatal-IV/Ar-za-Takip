<div id="user-management" class="panel-section"> 
    <header class="top-bar">
        <h1>Kullanıcı Yönetimi</h1>
    </header>

    <div style="margin-bottom: 20px; max-width: 400px;">
        <div class="input-group">
            <span class="material-icons-round" style="position: absolute; right: 15px; top: 15px; color: var(--text-sub); pointer-events: none;">search</span>
            <input type="text" id="userSearchInput" onkeyup="filterUsersTable()" placeholder=" " style="padding-right: 40px;">
            <label>Sicil No, İsim veya Soyisim ile Ara...</label>
        </div>
    </div>
    <div class="card" style="padding: 0; overflow: hidden;">
        <table class="operator-table" id="usersTable">
      <thead>
          <tr>
            <th style="padding-left:24px;">Personel</th>
            <th>İletişim / Birim</th>
            <th>Rol</th>
            <th>Düzenle</th>
            <th>Sil</th> </tr>
      </thead>
            <tbody>
                <% if(typeof allUsers === 'undefined' || allUsers.length === 0) { %>
                    <tr>
                        <td colspan="4" style="text-align:center; padding:30px; color:var(--text-sub);">
                            Henüz kayıtlı kullanıcı bulunmamaktadır veya veri yüklenemedi.
                        </td>
                    </tr>
                <% } else { %>
                    <% allUsers.forEach(u => { %>
                        <% if (u.id === user.id) return; %> 
                        <tr>
                            <td style="padding-left:24px;">
                                <div class="user-meta">
                                    <div class="user-avatar-small" style="background: #374151;">
                                        <%= u.ad.charAt(0) %><%= u.soyad.charAt(0) %>
                                    </div>
                                    <div class="meta-text">
                                        <div><%= u.ad %> <%= u.soyad %></div>
                                        <div>Sicil: <%= u.sicil %></div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="table-title"><%= u.birim %></div>
                                <div class="table-subtitle"><%= u.telefon %></div>
                            </td>
                            <td>
                                <% let badgeColor = u.rol === 'admin' ? '#f28b82' : (u.rol === 'teknisyen' ? '#fdd663' : '#8ab4f8'); %>
                                <span style="color:<%= badgeColor %>; font-weight:600; text-transform:uppercase; font-size:0.8rem;">
                                    <%= u.rol %>
                                </span>
                            </td>
                            <td>
                                <button class="btn-action btn-edit-style"
                                    onclick="openEditModal(<%= JSON.stringify(u) %>)"
                                    title="Kullanıcıyı Düzenle">
                                    <span class="material-icons-round">edit</span>
                                </button>
                            </td>
                            <td style="text-align: center;">
                                    <button onclick="deleteUser(<%= u.id %>, this, '<%= u.ad %> <%= u.soyad %>')" 
                                    class="btn-action" 
                                    style="width:auto; padding:6px 12px; background:transparent; border:1px solid var(--danger); color:var(--danger); cursor: pointer;"
                                    title="Kullanıcıyı Sil">
                                    <span class="material-icons-round">delete</span>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
</div> 

<div id="editUserModal" class="modal-overlay">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Kullanıcıyı Düzenle</h3>
            <button onclick="closeEditModal()" class="close-btn" title="Kapat">
                <span class="material-icons-round">close</span>
            </button>
        </div>
        
        <form action="/admin/update-user" method="POST">
            <input type="hidden" id="edit_id" name="id">
            
            <div class="form-grid" style="grid-template-columns: 1fr 1fr; display:grid; gap:15px; margin-bottom: 20px;">
                <div class="input-group">
                    <input type="text" id="edit_ad" name="ad" required placeholder=" ">
                    <label>Ad</label>
                </div>
                <div class="input-group">
                    <input type="text" id="edit_soyad" name="soyad" required placeholder=" ">
                    <label>Soyad</label>
                </div>
            </div>

            <div class="form-grid" style="grid-template-columns: 1fr 1fr; display:grid; gap:15px; margin-bottom: 20px;">
                <div class="input-group">
                    <input type="text" id="edit_sicil" name="sicil" required placeholder=" ">
                    <label>Sicil No</label>
                </div>
                <div class="input-group">
                    <input type="text" id="edit_telefon" name="telefon" required placeholder=" ">
                    <label>Telefon</label>
                </div>
            </div>

            <div class="input-group" style="margin-bottom: 20px;">
                <input type="text" id="edit_birim" name="birim" required placeholder=" ">
                <label>Birim</label>
            </div>

            <div class="input-group" style="margin-bottom: 20px;">
                <select id="edit_rol" name="rol" class="styled-select">
                    <option value="kullanici">Kullanıcı</option>
                    <option value="operator">Operatör</option>
                    <option value="teknisyen">Teknisyen</option>
                    <option value="admin">Admin</option>
                </select>
            </div>

            <div class="input-group" style="margin-top:20px; border-top:1px solid var(--border); padding-top:20px;">
                <input type="password" name="yeni_sifre" placeholder=" ">
                <label>Yeni Şifre (Boş bırakılırsa değişmez)</label>
            </div>

            <button type="submit" class="btn-action" style="margin-top:25px;">
                <span class="material-icons-round">save</span>
                Bilgileri Güncelle
            </button>
        </form>
    </div>
</div>