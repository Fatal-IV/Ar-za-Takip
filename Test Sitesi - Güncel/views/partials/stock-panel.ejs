<div id="stock-management" class="panel-section">
    <header class="top-bar" style="display:flex; justify-content:space-between; align-items:center;">
        <h1>Stok ve Zimmet Takibi</h1>
        
        <button onclick="openDefModal()" class="btn-action settings-btn">
            <span class="material-icons-round">tune</span>
            <span>Tanımlar</span>
        </button>
    </header>

    <div class="card">
        <h3 class="card-title">Yeni Kayıt Oluştur</h3>
        <form action="/stock/add" method="POST">
            <div class="form-grid-3">
                
                <div class="input-group dark-theme">
                    <select name="urun_tipi" id="add_urun_tipi" required class="styled-select" onchange="updateModelOptions('add')">
                        <option value="" disabled selected></option>
                        <option value="Toner">Toner</option>
                        <option value="Drum">Drum</option>
                        <option value="Fuser">Fuser</option>
                        <option value="Aksesuar">Aksesuar / Diğer</option>
                    </select>
                    <label>Ürün Tipi</label>
                </div>

                <div class="input-group dark-theme">
                    <select name="model_select" id="add_model_select" class="styled-select" style="display:none;">
                        <option value="" disabled selected>Model Seçiniz</option>
                    </select>
                    
                    <input type="text" name="model_input" id="add_model_input" placeholder=" ">
                    <input type="hidden" name="model" id="add_final_model">
                    
                    <label id="add_model_label">Marka / Model</label>
                </div>

                <div class="input-group dark-theme">
                    <input type="number" name="adet" value="1" required placeholder=" ">
                    <label>Adet</label>
                </div>
            </div>

            <div class="form-grid-2" style="margin-top:20px;">
                <div class="input-group dark-theme">
                    <input type="text" name="teslim_alan" required placeholder=" ">
                    <label>Teslim Alan / Yer</label>
                </div>
                <div class="input-group dark-theme">
                    <input type="text" name="aciklama" placeholder=" ">
                    <label>Açıklama (Opsiyonel)</label>
                </div>
            </div>

            <div style="margin-top:25px; text-align:right;">
                <button type="submit" class="btn-action primary-btn" onclick="prepareSubmission('add')">
                    <span class="material-icons-round">add</span> Kaydet
                </button>
            </div>
        </form>
    </div>

    <div class="card" style="padding:0; overflow:hidden; margin-top:20px;">
        <table class="operator-table">
            <thead>
                <tr>
                    <th style="padding-left:24px;">Tarih / İşlem Yapan</th>
                    <th>Ürün</th>
                    <th>Teslim Alan</th>
                    <th>Adet</th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <% if(typeof stockLogs !== 'undefined' && stockLogs.length > 0) { %>
                    <% stockLogs.forEach(log => { %>
                        <tr>
                            <td style="padding-left:24px;">
                                <div style="font-weight:600; font-size:0.9rem; color:var(--text-main);"><%= new Date(log.tarih).toLocaleDateString('tr-TR') %></div>
                                <div style="font-size:0.8rem; color:var(--text-sub);"><%= log.islem_yapan %></div>
                            </td>
                            <td>
                                <div class="issue-title"><%= log.urun_tipi %></div>
                                <div class="issue-desc"><%= log.model %></div>
                            </td>
                            <td style="font-weight:500; color:var(--text-main);"><%= log.teslim_alan %></td>
                            <td><span class="status-badge dark-badge"><%= log.adet %> Adet</span></td>
                            <td style="font-size:0.9rem; color:var(--text-sub);"><%= log.aciklama || '-' %></td>
                            <td>
                                <div style="display:flex; align-items:center; gap:8px;">
                                    <button class="btn-action icon-only" onclick="openStockModal(<%= JSON.stringify(log) %>)" title="Düzenle">
                                        <span class="material-icons-round">edit</span>
                                    </button>
                                    <form action="/stock/delete" method="POST" onsubmit="return confirm('Bu kaydı silmek istediğinize emin misiniz?');" style="margin:0;">
                                        <input type="hidden" name="id" value="<%= log.id %>">
                                        <button type="submit" class="btn-delete icon-only" title="Kaydı Sil">
                                            <span class="material-icons-round">delete</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="6" style="text-align:center; padding:30px; color:var(--text-sub);">Kayıt bulunamadı.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<div id="stockEditModal" class="modal-overlay">
    <div class="modal-content dark-modal">
        <div class="modal-header">
            <h3>Kayıt Düzenle</h3>
            <button onclick="closeStockModal()" class="close-btn"><span class="material-icons-round">close</span></button>
        </div>
        
        <form action="/stock/update" method="POST" style="padding-top:10px;">
            <input type="hidden" name="id" id="stk_id">
            
            <div class="form-grid-2">
                <div class="input-group dark-theme">
                    <select name="urun_tipi" id="stk_urun_tipi" class="styled-select" onchange="updateModelOptions('stk')">
                        <option value="Toner">Toner</option>
                        <option value="Drum">Drum</option>
                        <option value="Fuser">Fuser</option>
                        <option value="Aksesuar">Aksesuar / Diğer</option>
                    </select>
                    <label>Ürün Tipi</label>
                </div>
                <div class="input-group dark-theme">
                    <select id="stk_model_select" class="styled-select" style="display:none;">
                        <option value="" disabled selected>Model Seçiniz</option>
                    </select>
                    <input type="text" id="stk_model_input" placeholder=" ">
                    <input type="hidden" name="model" id="stk_final_model">
                    <label id="stk_model_label">Marka / Model</label>
                </div>
            </div>

            <div class="input-group dark-theme" style="margin-top:20px;">
                <input type="text" name="teslim_alan" id="stk_alan" required placeholder=" ">
                <label>Teslim Alan</label>
            </div>

            <div class="form-grid-2" style="grid-template-columns: 1fr 2fr; margin-top:20px;">
                <div class="input-group dark-theme">
                    <input type="number" name="adet" id="stk_adet" required placeholder=" ">
                    <label>Adet</label>
                </div>
                <div class="input-group dark-theme">
                    <input type="text" name="aciklama" id="stk_aciklama" placeholder=" ">
                    <label>Açıklama</label>
                </div>
            </div>

            <div style="text-align:right; margin-top:25px;">
                <button type="submit" class="btn-action primary-btn" onclick="prepareSubmission('stk')">
                    <span class="material-icons-round">save</span> Güncelle
                </button>
            </div>
        </form>
    </div>
</div>

<div id="defModal" class="modal-overlay">
    <div class="modal-content dark-modal" style="max-width:600px;">
        <div class="modal-header">
            <h3>Ayarlar / Tanımlar</h3>
            <button onclick="closeDefModal()" class="close-btn"><span class="material-icons-round">close</span></button>
        </div>
        
        <div style="padding-top:15px;">
            <div class="dark-box">
                <h4 class="box-title">
                    <span class="material-icons-round" style="font-size:18px; color:var(--primary);">add_circle</span>
                    Yeni Marka / Model Ekle
                </h4>
                
                <form action="/stock/def/add" method="POST">
                    <div style="display:grid; grid-template-columns: 1fr 2fr auto; gap:15px; align-items:end;">
                        <div class="input-group dark-theme" style="margin-bottom:0;">
                            <select name="tur" required class="styled-select">
                                <option value="Toner">Toner</option>
                                <option value="Drum">Drum</option>
                                <option value="Fuser">Fuser</option>
                            </select>
                            <label>Tür</label>
                        </div>

                        <div class="input-group dark-theme" style="margin-bottom:0;">
                            <input type="text" name="ad" required placeholder=" ">
                            <label>Yeni Tanım Adı</label>
                        </div>

                        <button type="submit" class="btn-icon-primary" title="Listeye Ekle">
                            <span class="material-icons-round">add</span>
                        </button>
                    </div>
                </form>
                <div class="box-note">* Eklenenler sabit listenin altına eklenecektir.</div>
            </div>

            <h4 class="section-title">Eklenen Tanımlar</h4>
            
            <div class="dark-table-container">
                <table class="operator-table" style="margin:0;">
                    <thead>
                        <tr>
                            <th style="padding:12px 15px; width:30%;">Kategori</th>
                            <th style="padding:12px 15px;">Tanım Adı</th>
                            <th style="width:50px; text-align:center;">Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(typeof stockDefinitions !== 'undefined' && stockDefinitions.length > 0) { %>
                            <% stockDefinitions.forEach(def => { %>
                                <tr>
                                    <td style="padding:10px 15px;">
                                        <span class="status-badge def-badge">
                                            <%= def.tur %>
                                        </span>
                                    </td>
                                    <td style="padding:10px 15px; font-weight:500; color:var(--text-main);">
                                        <%= def.ad %>
                                    </td>
                                    <td style="text-align:center;">
                                        <form action="/stock/def/delete" method="POST" onsubmit="return confirm('Silmek istediğinize emin misiniz?');" style="margin:0;">
                                            <input type="hidden" name="id" value="<%= def.id %>">
                                            <button type="submit" class="btn-delete icon-only-small">
                                                <span class="material-icons-round" style="font-size:16px;">close</span>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="3" style="text-align:center; padding:30px; color:var(--text-sub);">
                                    <span class="material-icons-round" style="font-size:32px; opacity:0.3; display:block; margin-bottom:5px;">playlist_off</span>
                                    Henüz eklenmiş özel bir marka/model yok.
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    const defaultData = {
        'Toner': ['Lexmark', 'Canon', 'Pantum', 'Epson'],
        'Drum':  ['Lexmark', 'Pantum', 'Epson'],
        'Fuser': ['Lexmark 710 Serisi', 'Lexmark 810 Serisi', 'Lexmark 820 Serisi']
    };
    const dbDataRaw = <%- typeof stockDefinitions !== 'undefined' ? JSON.stringify(stockDefinitions) : '[]' %>;
    const dbData = {};
    dbDataRaw.forEach(item => {
        if (!dbData[item.tur]) dbData[item.tur] = [];
        dbData[item.tur].push(item.ad);
    });

    function getCombinedOptions(type) {
        const defaults = defaultData[type] || [];
        const dynamics = dbData[type] || [];
        return [...defaults, ...dynamics]; 
    }

    function updateModelOptions(prefix) {
        const typeSelect = document.getElementById(prefix + '_urun_tipi');
        const modelSelect = document.getElementById(prefix + '_model_select');
        const modelInput = document.getElementById(prefix + '_model_input');
        const selectedType = typeSelect.value;
        const options = getCombinedOptions(selectedType);

        modelSelect.innerHTML = '<option value="" disabled selected>Seçiniz</option>';
        if (options.length > 0) {
            options.forEach(model => {
                const opt = document.createElement('option');
                opt.value = model;
                opt.textContent = model;
                modelSelect.appendChild(opt);
            });
            modelSelect.style.display = 'block';
            modelInput.style.display = 'none';
            modelInput.value = '';
        } else {
            modelSelect.style.display = 'none';
            modelInput.style.display = 'block';
        }
    }

    function prepareSubmission(prefix) {
        const modelSelect = document.getElementById(prefix + '_model_select');
        const modelInput = document.getElementById(prefix + '_model_input');
        const finalInput = document.getElementById(prefix + '_final_model');
        if (modelSelect.style.display !== 'none') {
            finalInput.value = modelSelect.value;
        } else {
            finalInput.value = modelInput.value;
        }
    }

    const stkModal = document.getElementById('stockEditModal');
    const defModal = document.getElementById('defModal');

    function openStockModal(data) {
        document.getElementById('stk_id').value = data.id;
        document.getElementById('stk_alan').value = data.teslim_alan;
        document.getElementById('stk_adet').value = data.adet;
        document.getElementById('stk_aciklama').value = data.aciklama;
        const typeSelect = document.getElementById('stk_urun_tipi');
        typeSelect.value = data.urun_tipi;
        updateModelOptions('stk'); 
        const modelSelect = document.getElementById('stk_model_select');
        const modelInput = document.getElementById('stk_model_input');
        const combinedList = getCombinedOptions(data.urun_tipi);
        
        if (combinedList.includes(data.model)) {
            modelSelect.value = data.model;
        } else {
            if(modelSelect.style.display !== 'none') {
                 modelSelect.style.display = 'none';
                 modelInput.style.display = 'block';
            }
            modelInput.value = data.model;
        }
        stkModal.classList.add('show');
    }

    function closeStockModal() { stkModal.classList.remove('show'); }
    function openDefModal() { defModal.classList.add('show'); }
    function closeDefModal() { defModal.classList.remove('show'); }
    
    window.addEventListener('click', (e) => {
        if(e.target == stkModal) closeStockModal();
        if(e.target == defModal) closeDefModal();
    });
</script>

<style>
    /* GENEL DEĞİŞKENLER */
    :root {
        --bg-card: #1e1e1e;       
        --bg-input: #2d2d2d;      
        --border-color: #5f6368;  
        --primary-text: #e8eaed;  
        --accent-blue: #8ab4f8;   
    }

    /* DROPDOWN (AÇILIR MENÜ) ARKA PLAN RENGİ 
       Bu kısım seçeneklerin açıldığında beyaz olmasını engeller. */
    select option {
        background-color: #1e1e1e;
        color: #e8eaed;
        padding: 10px;
    }

    /* GRID YAPISI */
    .form-grid-3 { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px; }
    .form-grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; }

    /* CARD BAŞLIK */
    .card-title {
        margin-top: 0;
        color: var(--primary-text, #fff);
        font-size: 1.1rem;
        border-bottom: 1px solid var(--border, #3c4043);
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

    /* AYARLAR BUTONU */
    .settings-btn {
        width: auto;
        background: transparent;
        border: 1px solid var(--border-color);
        color: var(--primary-text, #fff);
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 8px;
        transition: 0.2s;
    }
    .settings-btn:hover { background: rgba(255,255,255,0.1); }

    /* PRIMARY BUTTON */
    .primary-btn {
        width: auto;
        padding: 10px 25px;
        background-color: var(--accent-blue);
        color: #202124; 
        font-weight: 600;
        border: none;
        border-radius: 20px;
    }

    /* KÜÇÜK İKON BUTONLAR */
    .btn-icon-primary {
        height: 44px; width: 44px;
        padding: 0;
        display: flex; align-items: center; justify-content: center;
        border-radius: 12px;
        background: var(--accent-blue);
        color: #202124;
        border: none;
        cursor: pointer;
    }
    .icon-only { width: 32px; height: 32px; padding: 0; display: flex; align-items: center; justify-content: center; }
    .icon-only-small { width: 28px; height: 28px; padding: 4px; min-width: auto; }

    /* MODAL DÜZENİ */
    .modal-overlay.show { display: flex !important; align-items: center; justify-content: center; }
    .dark-modal {
        background-color: var(--bg-card, #1e1e1e); 
        color: var(--primary-text, #fff);
        border: 1px solid #3c4043;
    }
    .modal-header h3 { color: var(--primary-text, #fff); }

    /* AYARLAR KUTUSU */
    .dark-box {
        background-color: #2d2d2d;
        border: 1px solid #3c4043;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 25px;
    }
    .box-title {
        margin: 0 0 15px 0;
        font-size: 0.9rem;
        color: var(--primary-text, #fff);
        display: flex; align-items: center; gap: 8px;
    }
    .box-note { font-size: 0.75rem; color: #9aa0a6; margin-top: 10px; }
    .section-title { margin: 0 0 10px 0; font-size: 0.9rem; color: var(--primary-text, #fff); }
    
    .dark-table-container {
        border: 1px solid #3c4043;
        border-radius: 8px;
        overflow: hidden;
        max-height: 250px;
        overflow-y: auto;
    }
    .dark-table-container thead { background-color: #2d2d2d; }
    
    /* ROZETLER */
    .dark-badge {
        background: rgba(138, 180, 248, 0.1);
        color: var(--accent-blue);
        border: 1px solid rgba(138, 180, 248, 0.3);
    }
    .def-badge {
        font-size: 0.75rem;
        background: #3c4043;
        color: #e8eaed;
        border: 1px solid #5f6368;
        padding: 2px 8px;
        border-radius: 4px;
    }

    /* --- FLOATING LABEL DÜZELTMESİ (LABEL ARKASI) --- */
    
    .input-group.dark-theme select,
    .input-group.dark-theme input {
        background-color: transparent; 
        color: var(--primary-text, #fff);
        border-color: var(--border-color);
    }
    
    /* Label arka planını kartın rengiyle aynı yapıyoruz */
    .input-group.dark-theme select:focus + label,
    .input-group.dark-theme select:not(:placeholder-shown) + label,
    .input-group.dark-theme select:valid + label,
    .input-group.dark-theme input:focus + label,
    .input-group.dark-theme input:not(:placeholder-shown) + label {
        background-color: var(--bg-card, #1e1e1e); /* Kart rengi */
        padding: 0 5px;
        color: var(--accent-blue);
        font-size: 12px;
        top: -10px;
        left: 10px;
        z-index: 2;
    }
    
    /* Ayarlar Modalındaki Kutu (#2d2d2d) içindeki Label için özel kural */
    .dark-box .input-group.dark-theme input:focus + label,
    .dark-box .input-group.dark-theme select:focus + label {
        background-color: #2d2d2d; 
    }

</style>